<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="@color/teal_200"
    android:orientation="vertical">

    <ImageView android:id="@+id/lo"
        android:layout_marginTop="30dp"
        android:contentDescription="logo_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/dd_logo"
        tools:ignore="MissingConstraints"/>
    <TextView android:layout_below="@id/lo"
        android:id="@+id/select_value"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="menu item"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText android:hint="add new food..."
        android:layout_marginTop="16dp"
        android:layout_below="@id/select_value"
        android:id="@+id/add_menu"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:inputType="text"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_menu"
        android:layout_centerHorizontal="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="0dp"


        android:onClick="addMenu"
        android:text="ADD FOOD"
        android:textColor="@color/black"
        android:textAllCaps="true"
        tools:ignore="UsingOnClickInXml" />
    <Button android:layout_alignParentBottom="true"
        android:onClick="decideMenu"
        android:layout_marginBottom="0dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:textAllCaps="true"
        android:layout_height="wrap_content"
        android:text="DECIDE"
        android:background="@color/purple_200"
        tools:ignore="UsingOnClickInXml"/>
</RelativeLayout>